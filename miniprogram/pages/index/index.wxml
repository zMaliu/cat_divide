<view class="container">
  <view class="header">
    <text class="title">猫品种识别</text>
    <text class="subtitle">拍摄或上传照片，识别猫的品种</text>
  </view>

  <view class="camera-section">
    <camera wx:if="{{!imagePath}}" device-position="back" flash="off" binderror="error" style="width: 100%; height: 500rpx;"></camera>
    <image wx:else src="{{imagePath}}" mode="aspectFit" style="width: 100%; height: 500rpx;"></image>
    
    <view class="button-group">
      <button wx:if="{{!imagePath}}" type="default" bindtap="chooseImage">从相册选择</button>
      <button wx:if="{{!imagePath}}" type="primary" bindtap="takePhoto">拍照</button>
      <button wx:if="{{imagePath}}" type="default" bindtap="retake">重新拍摄</button>
      <button wx:if="{{imagePath}}" type="primary" bindtap="analyzeImage">开始识别</button>
    </view>
  </view>

  <view class="result-section" wx:if="{{result}}">
    <view class="result-card">
      <text class="result-title">识别结果</text>
      <view class="breed-info">
        <text class="breed-name">{{result.breed}}</text>
        <text class="confidence">置信度: {{result.confidence}}%</text>
      </view>
      <view class="breed-description">
        <text class="description-title">品种特点</text>
        <text class="description-content">{{result.description}}</text>
      </view>
    </view>
  </view>
</view> 