page {
  background-color: #F7F8FC;
  min-height: 100vh;
}

.container {
  padding: 30rpx;
  box-sizing: border-box;
}

.form-section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(91, 95, 239, 0.08);
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background: #5B5FEF;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.input-group {
  position: relative;
  margin-bottom: 20rpx;
}

.input-title {
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #EAEAEA;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.input-content {
  width: 100%;
  height: 360rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 24rpx;
  color: #999999;
}

.upload-section {
  margin-top: 30rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.post-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16rpx;
}

.remove-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background-color: #F7F8FC;
  border: 2rpx dashed #CCCCCC;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999999;
  font-size: 24rpx;
}

.upload-btn:active {
  background-color: rgba(91, 95, 239, 0.05);
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
  color: #5B5FEF;
}

.submit-section {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #8286FF, #5B5FEF);
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  text-align: center;
  box-shadow: 0 6rpx 16rpx rgba(91, 95, 239, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-btn:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}