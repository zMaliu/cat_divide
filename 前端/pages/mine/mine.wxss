.mine-container {
  background-color: #fffde7;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户信息头部 */
.user-header {
  position: relative;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 220rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  z-index: 0;
  border-radius: 0 0 30rpx 30rpx;
}

.user-info {
  position: relative;
  z-index: 1;
  display: flex;
  padding: 0 40rpx;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 猫耳朵装饰 */
.cat-ears {
  position: absolute;
  top: -25rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx;
  z-index: -1;
}

.ear {
  width: 40rpx;
  height: 50rpx;
  background-color: var(--primary-color);
  border-radius: 50% 50% 0 0;
  position: relative;
}

.ear.left {
  transform: rotate(-20deg);
}

.ear.right {
  transform: rotate(20deg);
}

.user-detail {
  flex: 1;
  color: #fff;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
}

.login-btn {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 用户数据统计 */
.user-stats {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  margin: 0 30rpx;
  padding: 30rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 2;
  position: relative;
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child):after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  bottom: 20%;
  width: 1px;
  background-color: var(--border-color);
}

.stat-num {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 作品区域 */
.section-title {
  display: flex;
  align-items: center;
  margin: 40rpx 30rpx 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.paw-icon {
  width: 30rpx;
  height: 30rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  margin-left: 16rpx;
  position: relative;
}

.paw-icon:before {
  content: '';
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  top: -15rpx;
  left: 0;
}

.paw-icon:after {
  content: '';
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  top: -15rpx;
  right: 0;
}

/* 未登录提示 */
.not-login-tip {
  text-align: center;
  padding: 60rpx 0;
  color: var(--text-hint);
  font-size: 28rpx;
}

/* 空作品状态 */
.empty-posts {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  color: var(--text-hint);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.post-btn {
  margin-top: 30rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 16rpx 60rpx;
  font-size: 28rpx;
}

/* 作品网格 */
.posts-container {
  padding: 0 20rpx;
}

.posts-grid {
  display: flex;
  flex-wrap: wrap;
}

.post-item {
  width: 33.33%;
  padding: 10rpx;
  box-sizing: border-box;
}

.post-image {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

.post-title {
  font-size: 24rpx;
  margin-top: 8rpx;
  color: var(--text-secondary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 功能菜单 */
.menu-section {
  margin: 40rpx 30rpx 0;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon::before {
  content: '';
  width: 30rpx;
  height: 30rpx;
  background-color: var(--primary-color);
  opacity: 0.7;
  border-radius: 50%;
}

