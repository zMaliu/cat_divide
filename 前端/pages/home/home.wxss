.home-container { background: #f5f5f5; min-height: 100vh; color: #111; }
.navbar {
  display: flex;
  align-items: center;
  justify-content: center; /* 水平居中 */
  position: relative;      /* 让右上角放大镜绝对定位基于这里 */
  padding: 20rpx;
  color: #111;
  border-bottom: 2rpx solid rgb(214, 214, 214);
}
.tab { margin-right: 40rpx; font-size: 32rpx; }
.selected { color: #111; font-weight: bold; border-bottom: 4rpx solid #111; }

.waterfall { display: flex; flex-wrap: wrap; }

.masonry {
  column-count: 2; /* 两列 */
  column-gap: 20rpx; /* 列间距 */
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
}

.post-card {
  display: inline-block;
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  margin-bottom: 20rpx;
  overflow: hidden;
  /* 让卡片在多列布局下自适应高度 */
}

.post-img {
  width: 100%;
  display: block;
  border-radius: 16rpx 16rpx 0 0;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 16rpx 16rpx 0 16rpx;
}

.post-desc {
  font-size: 26rpx;
  color: #555;
  margin: 8rpx 16rpx 0 16rpx;
}

.post-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 16rpx;
  padding: 0;
}

.footer-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.footer-nickname {
  font-size: 24rpx;
  color: #333;
  margin-right: 16rpx;
  /* 让昵称紧跟头像 */
}

.footer-like {
  display: flex;
  align-items: center;
  margin-left: auto; /* 推到最右侧 */
}

.like-icon {
  color: #FF2D55;
  margin-right: 4rpx;
}

.like-count {
  font-size: 24rpx;
  color: #888;
}

/* 搜索框样式 */
.search-container {
  border: 1rpx solid rgb(116, 116, 116);
  border-radius: 10rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  padding: 0 20rpx;
  height: 60rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-icon-box {
  position: absolute;
  right: 32rpx;
  top: 32rpx;
  /* 你可以根据实际情况微调位置 */
  z-index: 10;
  background: transparent;
}
.search-icon {
  width: 48rpx;
  height: 48rpx;
}
