/* pages/shop/shop.wxss */
.shop-container { background: #f5f5f5; min-height: 100vh; }
.search-bar { display: flex; padding: 20rpx; background: #fff; }
.search-input { flex: 1; border: none; background: #eee; border-radius: 8rpx; padding: 12rpx; }
.search-btn { margin-left: 12rpx; background: #FF2D55; color: #fff; border: none; border-radius: 8rpx; }
.goods-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    padding: 16rpx;
    box-sizing: border-box;
  }
  
  .goods-card {
    width: 46%; /* 两列，留点间距 */
    height: 430rpx;
    margin: 2%;
    background: #fff;
    border-radius: 24rpx;
    padding: 16rpx;
    box-sizing: border-box;
    box-shadow: 0 2rpx 8rpx #eee;
    margin-bottom: 24rpx;
  }
  
  .goods-img {
    width: 100%;
    height: 300rpx;
    border-radius: 16rpx;
    object-fit: cover;
  }
  
  .goods-title {
    font-weight: bold;
    margin-top: 12rpx;
    color: #111;
    font-size: 30rpx;
  }
  
  .goods-price {
    color: #FF2D55;
    font-size: 28rpx;
    margin-top: 8rpx;
  }