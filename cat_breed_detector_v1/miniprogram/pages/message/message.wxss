/* pages/message/message.wxss */
.message-container { background: #fff; min-height: 100vh; color: #111; }
.msg-header { display: flex; justify-content: space-around; padding: 24rpx 0; border-bottom: 1rpx solid #eee; }
.msg-item { background: #fafafa; border-radius: 16rpx; padding: 16rpx 32rpx; color: #111; }
.msg-list { margin-top: 20rpx; }
.msg-row { display: flex; align-items: center; padding: 20rpx; border-bottom: 1rpx solid #eee; }
.msg-avatar { width: 80rpx; height: 80rpx; border-radius: 50%; }
.msg-info { flex: 1; margin-left: 20rpx; }
.msg-title { font-weight: bold; color: #111; }
.msg-desc { color: #555; font-size: 24rpx; }
.msg-time { color: #888; font-size: 22rpx; }