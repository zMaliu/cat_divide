.home-container { 
  background: #fffde7; 
  min-height: 100vh; 
  color: #333;
  padding-bottom: 30rpx;
}

.navbar {
  display: flex;
  align-items: center;
  justify-content: center;
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx;
  color: var(--text-primary);
  border-bottom: 2rpx solid var(--border-color);
  background: var(--card-background);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab { 
  margin-right: 40rpx; 
  font-size: 32rpx; 
  padding: 10rpx 20rpx;
  position: relative;
  transition: all 0.3s ease;
}

.selected { 
  color: var(--primary-color); 
  font-weight: bold; 
}

.selected::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 6rpx;
  background: var(--primary-color);
  border-radius: 3rpx;
}

/* 下拉刷新和加载更多 */
.refresh-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
}

/* 下拉刷新的猫咪动画 */
.cat-refresh {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background-color: #E67E22;
  border-radius: 50%;
  margin: 20rpx auto;
  box-shadow: 0 4rpx 10rpx rgba(230, 126, 34, 0.3);
}

.cat-face {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.refresh-ear {
  position: absolute;
  width: 30rpx;
  height: 40rpx;
  background-color: #E67E22;
  border-radius: 50% 50% 0 0;
  top: -20rpx;
  animation: earWiggle 1.2s infinite alternate;
}

.refresh-ear.left {
  left: 10rpx;
  transform-origin: bottom right;
  animation-delay: 0.2s;
}

.refresh-ear.right {
  right: 10rpx;
  transform-origin: bottom left;
}

.refresh-text {
  position: absolute;
  width: 200rpx;
  text-align: center;
  font-size: 24rpx;
  color: #E67E22;
  bottom: -40rpx;
  left: 50%;
  transform: translateX(-50%);
}

@keyframes earWiggle {
  0% { transform: rotate(-5deg); }
  100% { transform: rotate(15deg); }
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

/* 猫爪加载动画 */
.paw-loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.paw-dot {
  width: 20rpx;
  height: 20rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  margin: 0 6rpx;
  animation: pawBounce 0.6s infinite alternate;
}

.paw-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.paw-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes pawBounce {
  from { transform: translateY(0); }
  to { transform: translateY(-10rpx); }
}

.waterfall { 
  display: flex; 
  flex-wrap: wrap; 
  padding: 10rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.masonry {
  column-count: 2;
  column-gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 8rpx;
}

/* 卡片样式优化 */
.post-card {
  display: inline-block;
  width: 100%;
  background: #ffffff;
  border-radius: 14rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  margin-bottom: 16rpx;
  overflow: hidden;
  break-inside: avoid;
  transform: translateZ(0);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.post-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.post-img {
  width: 100%;
  display: block;
  border-radius: 14rpx 14rpx 0 0;
  transition: opacity 0.3s ease;
  position: relative;
}

/* 图片加载状态 */
.image-placeholder {
  background: linear-gradient(90deg, #f0f0f0, #f8f8f8, #f0f0f0);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx 16rpx 0 0;
  position: relative;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

.loading-spinner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid rgba(230, 126, 34, 0.2);
  border-top: 5rpx solid #E67E22;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

.post-content-container {
  padding: 12rpx;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.post-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 8rpx 12rpx 6rpx 12rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-content {
  font-size: 24rpx;
  color: #666;
  margin: 0 12rpx 8rpx 12rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-footer {
  display: flex;
  align-items: center;
  padding: 8rpx 12rpx;
  border-top: 1rpx solid #f0f0f0;
  justify-content: space-between;
  flex-wrap: nowrap;
  overflow: hidden;
  box-sizing: border-box;
  width: 100%;
}

/* 用户信息和统计 */
.user-info {
  display: flex;
  align-items: center;
  flex-shrink: 1;
  min-width: 0;
  overflow: hidden;
}

.user-avatar {
  width: 32rpx;
  height: 32rpx;
  background-color: #E67E22;
  border-radius: 50%;
  margin-right: 8rpx;
}

.footer-post_user_name {
  font-size: 22rpx;
  color: #666;
  display: flex;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.post-stats {
  display: flex;
  margin-left: auto;
  flex-shrink: 0;
  max-width: 50%;
}

.stat-item {
  display: flex;
  align-items: center;
