.upload-btn {
    margin-bottom: 20rpx;
}

.preview-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 12rpx;
    margin-top: 10rpx;
}

.input-group {
    position: relative;
    margin-bottom: 32rpx;
}

.input {
    width: 100%;
    height: 88rpx;
    padding: 0 24rpx;
    border: 2rpx solid #e8e8e8;
    border-radius: 12rpx;
    font-size: 28rpx;
    background: #fafafa;
    transition: all 0.3s ease;
    box-sizing: border-box;
}
/*  */

.input:focus {
    border-color: #667eea;
    background: #fff;
    box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  }
  
  .input-group:has(.code-btn) {
    display: flex;
    gap: 16rpx;
  }
  
  .input-group:has(.code-btn) .input {
    flex: 1;
  }
  
  .code-btn {
    width: 200rpx;
    height: 88rpx;
    background: #667eea;
    color: #fff;
    border: none;
    border-radius: 12rpx;
    font-size: 26rpx;
    transition: all 0.3s ease;
  }
  
  .code-btn:disabled {
    background: #ccc;
    color: #999;
  }
  
  .submit-btn {
    width: 100%;
    height: 88rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    border: none;
    border-radius: 12rpx;
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 16rpx;
    transition: all 0.3s ease;
  }
  
  .submit-btn:active {
    transform: scale(0.98);
    box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  }
  
  .other-options {
    text-align: center;
    margin-top: 32rpx;
  }
  
  .forgot-password {
    color: #667eea;
    font-size: 26rpx;
    text-decoration: underline;
  }
  
  .footer {
    margin-top: 60rpx;
    text-align: center;
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .agreement {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .link {
    color: #fff;
    text-decoration: underline;
    margin: 0 8rpx;
  }