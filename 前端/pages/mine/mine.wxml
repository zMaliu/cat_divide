<view class="mine-container">
  <!-- 顶部用户信息区域 -->
  <view class="user-header">
    <view class="user-bg"></view>
    <view class="user-info">
      <view class="avatar-container">
        <image class="avatar" src="../../assets/avatar1.jpg" mode="aspectFill"></image>
        <view class="cat-ears">
          <view class="ear left"></view>
          <view class="ear right"></view>
        </view>
      </view>
      <view class="user-detail">
        <view class="username">{{userInfo.user_name || '未登录'}}</view>
        <view class="user-id" wx:if="{{userInfo.user_id}}">ID: {{userInfo.user_id}}</view>
        <view class="login-btn" wx:if="{{!userInfo.user_id}}" bindtap="goLogin">点击登录</view>
      </view>
    </view>
    
    <!-- 用户数据统计 -->
    <view class="user-stats" wx:if="{{userInfo.user_id}}">
      <view class="stat-item">
        <view class="stat-num">{{userPosts.length || 0}}</view>
        <view class="stat-label">作品</view>
      </view>
      <view class="stat-item">
        <view class="stat-num">0</view>
        <view class="stat-label">喜欢</view>
      </view>
      <view class="stat-item">
        <view class="stat-num">0</view>
        <view class="stat-label">收藏</view>
      </view>
    </view>
  </view>
  
  <!-- 我的作品区域 -->
  <view class="section-title">
    <text>我的猫咪作品</text>
    <view class="paw-icon"></view>
  </view>
  
  <view wx:if="{{!userInfo.user_id}}" class="not-login-tip">
    <text>登录后查看您的作品</text>
  </view>
  
  <view wx:elif="{{userPosts.length === 0}}" class="empty-posts">
    <image class="empty-icon" src="../../assets/avatar1.jpg" mode="aspectFill"></image>
    <text>您还没有发布作品</text>
    <button class="post-btn" bindtap="onPosting">去发布</button>
  </view>
  
  <view wx:else class="posts-container">
    <view class="posts-grid">
      <view class="post-item" wx:for="{{userPosts}}" wx:key="article_id" bindtap="viewPost" data-id="{{item.article_id}}">
        <image class="post-image" src="{{item.img}}" mode="aspectFill" lazy-load></image>
        <view class="post-title">{{item.title}}</view>
      </view>
    </view>
  </view>
  
  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="openSettings">
      <view class="menu-icon settings-icon"></view>
      <text>设置</text>
      <view class="arrow"></view>
    </view>
    
    <view class="menu-item" bindtap="logout" wx:if="{{userInfo.user_id}}">
      <view class="menu-icon logout-icon"></view>
      <text>退出登录</text>
      <view class="arrow"></view>
    </view>
  </view>
</view>