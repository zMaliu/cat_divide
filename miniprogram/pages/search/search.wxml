<view class="search-page-container">
  <view class="search-bar">
    <input class="search-input" type="text" placeholder="请输入要搜索的内容" bindinput="onInput" value="{{keyword}}" confirm-type="search" bindconfirm="onSearch"/>
    <button class="search-btn" bindtap="onSearch">搜索</button>
  </view>
  <view class="search-result">
    <block wx:if="{{resultList.length > 0}}">
      <block wx:for="{{resultList}}" wx:key="id">
        <view class="result-item">
          <image src="{{item.img}}" class="result-img"/>
          <view class="result-info">
            <view class="result-title">{{item.title}}</view>
            <view class="result-desc">{{item.desc}}</view>
          </view>
        </view>
      </block>
    </block>
    <block wx:else>
      <view class="no-result">暂无搜索结果</view>
    </block>
  </view>
</view>
