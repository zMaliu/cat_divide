/* pages/mine/mine.wxss */
.mine-container { background: #fff; min-height: 100vh; color: #111; }
.profile-header { display: flex; align-items: center; padding: 20rpx; }
.profile-avatar { width: 120rpx; height: 120rpx; border-radius: 50%; }
.profile-info { margin-left: 24rpx; flex: 1; }
.profile-name { font-size: 36rpx; font-weight: bold; color: #111; }
.profile-id { color: #888; font-size: 24rpx; }
.edit-btn { background: #111; color: #fff; border-radius: 16rpx; }
.profile-stats { display: flex; justify-content: space-around; padding: 24rpx 0; }
.stat-item { text-align: center; color: #111; }
.profile-menu { display: flex; justify-content: space-around; background: #fafafa; border-radius: 16rpx; margin: 24rpx; padding: 16rpx 0; }
.menu-item { color: #111; }
.profile-tabs { display: flex; border-bottom: 1rpx solid #eee; }
.tab { flex: 1; text-align: center; padding: 20rpx 0; color: #111; }
.selected { color: #111; font-weight: bold; border-bottom: 4rpx solid #111; }
.empty-content { text-align: center; margin-top: 80rpx; }
.publish-btn { background: #111; color: #fff; border-radius: 16rpx; margin-top: 24rpx; }

/* 设置图标样式 */
.setting-container {
  margin-left: 15rpx;
}

.setting-icon {
  width: 60rpx;
  height: 60rpx;
  align-items: center;
}

.mine-tabs {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  background: #fff;
  margin-top: 20rpx;
}
.mine-tab {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx 0;
  color: #333;
}
.mine-tab.selected {
  font-weight: bold;
  color: #111;
  border-bottom: 4rpx solid #111;
}
.mine-tab-content {
  padding: 0 0 20rpx 0;
}
.masonry {
  column-count: 2;
  column-gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
}
.post-card {
  display: inline-block;
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  margin-bottom: 20rpx;
  overflow: hidden;
}
.post-img {
  width: 100%;
  display: block;
  border-radius: 16rpx 16rpx 0 0;
}
.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 16rpx 16rpx 0 16rpx;
}
.post-desc {
  font-size: 26rpx;
  color: #555;
  margin: 8rpx 16rpx 0 16rpx;
}