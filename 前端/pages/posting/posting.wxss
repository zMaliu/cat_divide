.posting-container {
  min-height: 100vh;
  background-color: #fffde7;
  padding: 30rpx;
}

/* 页面标题区域样式 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.page-subtitle {
  font-size: 28rpx;
  color: #888;
  margin-top: 10rpx;
  display: block;
}

/* 猫咪图标 */
.cat-icon {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-left: 15rpx;
}

.cat-ear {
  position: absolute;
  width: 20rpx;
  height: 25rpx;
  background-color: var(--primary-color);
  border-radius: 50% 50% 0 0;
  top: -15rpx;
}

.cat-ear.left {
  left: 5rpx;
  transform: rotate(-15deg);
}

.cat-ear.right {
  right: 5rpx;
  transform: rotate(15deg);
}

.cat-face {
  width: 40rpx;
  height: 40rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  position: relative;
}

.form-section {
  background-color: var(--card-background);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 输入组通用样式 */
.input-group {
  margin-bottom: 40rpx;
}

.upload-label, .input-label {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: var(--text-primary);
}

/* 新的图片上传区域样式 */
.upload-area {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.upload-preview {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: rgba(230, 126, 34, 0.05);
  border: 2rpx dashed var(--primary-color);
}

.default-preview {
  width: 100%;
  height: 100%;
}

.preview-img, .default-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 10rpx 0;
  text-align: center;
  font-size: 24rpx;
}

.upload-options {
  display: flex;
  gap: 20rpx;
}

.upload-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background: none;
  padding: 0;
}

.upload-btn.primary {
  background-color: var(--primary-color);
  color: #fff;
}

.upload-btn.secondary {
  background-color: #f0f0f0;
  color: #666;
}

.upload-btn::after {
  border: none;
}

.btn-icon {
  margin-right: 10rpx;
  font-weight: bold;
}

/* 输入区域优化 */
.input-container {
  position: relative;
  width: 100%;
}

.input-label {
  display: flex;
  align-items: center;
}

.required-mark {
  color: #ff4d4f;
  margin-left: 6rpx;
}

.input, .textarea {
  width: 100%;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input {
  height: 88rpx;
  padding: 0 24rpx;
}

.textarea {
  height: 240rpx;
  padding: 20rpx 24rpx;
  line-height: 1.5;
}

.input:focus, .textarea:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2rpx rgba(230, 126, 34, 0.2);
}

.char-count {
  position: absolute;
  right: 16rpx;
  bottom: -30rpx;
  font-size: 22rpx;
  color: #999;
}

.near-limit {
  color: #ff7700;
}

/* 标签选择区域 */
.category-section {
  margin-bottom: 40rpx;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 30rpx;
  font-size: 26rpx;
  transition: all 0.3s;
}

.tag.active {
  background-color: var(--primary-color);
  color: #fff;
}

/* 提交按钮优化 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 6rpx 16rpx rgba(230, 126, 34, 0.25);
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(230, 126, 34, 0.2);
}

.submit-btn[disabled] {
  opacity: 0.7;
  background: linear-gradient(135deg, #ccc 0%, #999 100%);
  box-shadow: none;
}

/* 猫爪印 */
.paw-print {
  width: 30rpx;
  height: 30rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 50%;
  position: absolute;
  right: 30rpx;
  box-shadow: -15rpx -8rpx 0 rgba(255, 255, 255, 0.5),
              -25rpx 8rpx 0 rgba(255, 255, 255, 0.5),
              -5rpx 8rpx 0 rgba(255, 255, 255, 0.5);
}